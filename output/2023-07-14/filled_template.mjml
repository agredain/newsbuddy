      <mj-section mj-class="images">
        <mj-column>
          
        </mj-column>
      </mj-section>
      
      <mj-section>
        <mj-column>
          <mj-text>
            <h2>Artículos</h2>
          </mj-text>
        </mj-column>
      </mj-section>

      <!-- Articles -->
			<mj-wrapper mj-class="articles">
				
          
					<mj-section mj-class="article">
						<mj-column>
							
              <mj-text mj-class="article-title"><a href="https://github.com/JuanCrg90/Clean-Code-Notes">GitHub - JuanCrg90/Clean-Code-Notes: My notes of Clean Code book</a></mj-text>
              
							<mj-text mj-class="article-summary">Clean Code Notes. Interesante repositorio en el que resumen el libreo de Clean Code. Lectura casi obligatoria.</mj-text>
						</mj-column>
					</mj-section>
				  
        
          
					<mj-section mj-class="article">
						<mj-column>
							
              <mj-text mj-class="article-title"><a href="https://tmewett.com/c-tips/">Everything I wish I knew when learning C - Tom Mewett</a></mj-text>
              
